{# app/Resources/views/offlinelayout.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}GSB Covoit{% endblock %}</title>

    {% block stylesheets %}
      {# On charge le CSS de bootstrap depuis le site directement #}
      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
          {% stylesheets 'bundles/gsbcovoit/css/main.css' filter='cssrewrite' %}
              <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />   
          {% endstylesheets %}
    {% endblock %}
 </head>


  <body>
  <div class="container">
    <div id="header" class="row text-center">
      <h1 style="font-size: 500%">GSB Covoit'</h1>
      <p>
        Site de covoiturage interne à l'entreprise GSB.
      </p>
      <br/>
      <p>
        <a class="btn btn-primary btn-lg" href="{{ path('gsb_covoit_inscription') }}">
          Inscription <i class="glyphicon glyphicon-chevron-right"></i>
        </a>
        <a class="btn btn-primary btn-lg" href="{{ path('gsb_covoit_login') }}">
          Connection <i class="glyphicon glyphicon-chevron-right"></i>
        </a>
      </p>
    </div>

    <div class="row">
      <div id="menu" class="col-md-3">
      <h3>Compte</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('gsb_covoit_inscription') }}">S'inscrire</a></li>
          <li><a href="{{ path('gsb_covoit_login') }}">Se connecter</a></li>
        </ul>
        <h3>Les annonces</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('gsb_covoit_homepage') }}">Accueil</a></li>
          <li><a href="#">Rechercher un trajet</a></li>
        </ul>
    </div>

    <div id="content" class="col-md-9 corps">
        {% block body %}
        {% endblock %}
    </div>
    <hr>
  </div>
  <footer class="text-center footer">
    <p>The sky's the limit © {{ 'now'|date('Y') }} and beyond.</p>
  </footer>
  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

  </body>
</html>
